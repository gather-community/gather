<% content_for(:title) { "Settings" } %>

<%= gather_form_for(@community, url: admin_settings_path(type: "community")) do |f| %>
  <%= render("admin/settings/group_entry", group_entry: @community.settings, f: f) %>
  <%= form_actions do %>
    <%= f.button :submit, "Save Settings", class: "btn-primary" %>
  <% end %>

  <%= javascript_tag do %>
    $(function(){
      new Gather.Views.DirtyChecker({el: '.community-form'});
    });
  <% end %>
<% end %>
